{
  "name": "hub-repo-tracker",
  "version": "1.0.5",
  "type": "module",
  "bin": {
    "hub-repo-tracker": "dist/app.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "start": "node dist/app.js",
    "build": "tsc",
    "build:all": "node scripts/build-unified.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
