    "postinstall": "node -e \"try{require('better-sqlite3')}catch(e){console.log('better-sqlite3 native build needed. Run: npm run rebuild:native')}\"",
    "rebuild:native": "npm rebuild better-sqlite3"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.4.0",
    "@fastify/static": "^9.0.0",
    "@types/semver": "^7.7.1",
    "ajv": "^8.17.1",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "node-cron": "^3.0.3",
    "octokit": "^4.0.2",
    "open": "^11.0.0",
    "p-limit": "^7.3.0",
    "pino-pretty": "^13.1.3",
    "semver": "^7.7.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.14.0",
    "globals": "^17.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
